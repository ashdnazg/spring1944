StartMoving()
{
set ACTIVATION to 1;
bMoving=1;
	if (bAiming==0)
	{
	set CLOAKED to FALSE;
	}
}

StopMoving()
{
set ACTIVATION to 0;
bMoving=0;
sleep 10000;
if (bMoving==0)
	{
	start-script AimWeapon1();
	}
}

