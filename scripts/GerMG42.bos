AimWeapon1(heading, pitch)
{

	
	signal 2;
	set-signal-mask 2;

	if (bMoving == 1 OR IsPinned==1) return (0);
	bAiming=1;
	
/*	if (reloading==1)
	{
	 return (0);
	}*/
	
	if (IsProne==1 && fear < PinnedLevel)
	{
		turn pelvis to y-axis heading speed <50>;
		turn torso to y-axis <0> speed <150>*PRONE_SPEED;
		turn ruparm to x-axis <-85> - pitch speed <180>*PRONE_SPEED;
		turn luparm to x-axis <-140> - pitch speed <180>*PRONE_SPEED;
		wait-for-turn pelvis around y-axis;
		bAiming=0;
		sleep 100;
		return (1);
		sleep 100;
	}
	
	if (IsProne==0)
	{	
	InAimStance=1;
	Move pelvis to y-axis [-1.8] speed <400>*RUN_SPEED;
	turn pelvis to y-axis heading speed <200.000000>;
	
	turn torso to y-axis <0> speed <300>;
	turn torso to x-axis <0> speed <300>;
	turn torso to z-axis <0> speed <300>;
	
	turn pelvis to x-axis <70> speed <300>;
	turn pelvis to z-axis <0> speed <300>;
	
